<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lab4.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createScheduleFragment"
            app:destination="@id/createScheduleFragment" />
    </fragment>

    <fragment
        android:id="@+id/createScheduleFragment"
        android:name="com.example.lab4.ui.schedule.CreateScheduleFragment"
        android:label="Create Schedule"
        tools:layout="@layout/fragment_create_schedule">

        <action
            android:id="@+id/action_createScheduleFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_createScheduleFragment_to_addHabitFragment"
            app:destination="@id/addHabitFragment" />
    </fragment>

    <fragment
        android:id="@+id/addHabitFragment"
        android:name="com.example.lab4.ui.habit.AddHabitFragment"
        android:label="New Habit"
        tools:layout="@layout/fragment_add_habit">
    </fragment>


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.lab4.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.lab4.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


</navigation>

